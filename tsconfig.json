{
  "compilerOptions": {
    "pretty": true,
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["bun-types"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "alwaysStrict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "exclude": ["dist", "node_modules", "tests", "prisma"]
}