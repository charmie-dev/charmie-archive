{
  "compilerOptions": {
    "pretty": true,
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["bun-types"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "alwaysStrict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "inlineSources": true,

    "paths": {
      "@/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@managers/*": ["./src/managers/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "tests", "prisma"]
}